<!DOCTYPE html>
<html>
    <head>
        <title>
            Items - Virtual Store
        </title>
    </head>
    <body>
        <h1>Items</h1>
        <ul>
            <% items.map( item => { %>
                <p> <%= item.name %> - $<%= (item.price)/100 %> </p>
                <button><a href='/items?itemId=<%= item.id %>'>Open</a></button>
                <button><a href='/edit?itemId=<%= item.id %>'>Edit</a></button>
                <button><a href='/delete?itemId=<%= item.id %>'>Delete</a></button>
            <% }) %>
        </ul>
    </body>
</html>